---
import SocialIcon from "@components/SocialIcon.astro";
import { SITE } from "@consts";

export interface Props {
    icon_size: string
}
  
const { icon_size } = Astro.props;
---
<ul class="not-prose flex flex-wrap gap-2">
    <SocialIcon icon_size={icon_size} URL="https://twitter.com/jingwu23" icon="twitter-x"/>
    <SocialIcon icon_size={icon_size} URL="https://github.com/jingwu2121" icon="github"/>
    <SocialIcon icon_size={icon_size} URL="https://www.linkedin.com/in/jing-wu-068b7b1b4" icon="linkedin"/>
    <SocialIcon icon_size={icon_size} URL=mailto:"jing.wu@eng.ox.ac.uk" icon="envelope-fill"/>
    <SocialIcon icon_size={icon_size} URL="https://scholar.google.com/citations?hl=en&user=2PVVLrMAAAAJ" icon="mortarboard-fill"/>
    <SocialIcon icon_size={icon_size} URL={`${SITE.SITEURL}/rss.xml`} icon="rss-fill"/>
</ul>